<table summary="Information about following/followers">
  <tr>
	<td class="main">
	  <h1><%= @title %></h1>
	
	  <% unless @users.empty? %>
		<ul class="users">
		  <%= render @users %>
		</ul>
		<%= will_paginate @users %>
	  <% end %>
	</td>
	<td class="sidebar round">
	  <strong>Name</strong> <%= @user.name %><br />
	  <strong>URL</strong> <%= link_to "My Profile Link", @user %><br />
	  <strong>Books</strong> <%= @user.books.count %><br />
	  <strong>Notes</strong> <%= "Need to Code" %>
	  <%= render 'shared/stats' %>
    </td>
  </tr>
</table>